<%- include('partials/header') -%>
<div class="container">
    <h1>Create Post</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label>Title</label>
            <input type="text" name="postTitle" class="form-control">
        </div>
        <div class="form-group">
            <label>Post</label>
            <textarea name="content" cols="40" rows="5" class="form-control"></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-primary">Publish</button>
    </form>
</div>

<%- include('partials/footer') -%>